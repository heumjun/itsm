<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="ManageMasterCodeList">

	<select id="list" parameterType="java.util.Map" resultType="org.apache.commons.collections4.map.CaseInsensitiveMap" >
		SELECT T2.*
		  FROM (SELECT T1.*
		             , FLOOR((ROWNUM - 1) / #{pageSize} + 1 ) AS PAGE
		          FROM (SELECT SEQ_ID
						      ,MAJOR_CODE
						      ,MAJOR_TYPE
						      ,MAJOR_CODE_KOR_NAME
						      ,MAJOR_CODE_ENG_NAME
						      ,DESCRIPTION
						      ,USE_YN
						      ,USE_YN as USE_YN_CHANGED
						      ,ORDER_NUM
						      ,CREATE_DATE
						      ,CREATED_BY
						      ,LAST_UPDATE_DATE
						      ,LAST_UPDATE_BY
						  FROM ITSM_COM_CODE_INFO_MASTER
						  WHERE 1=1
						  <if test='p_major_code_kor_name != null and !p_major_code_kor_name.equalsIgnoreCase("")'>
						    AND MAJOR_CODE_KOR_NAME LIKE '%' || #{p_major_code_kor_name} || '%'
						  </if>
						 ORDER BY ORDER_NUM
		     	) T1 ) T2
		 WHERE PAGE = #{curPageNo}
  	</select>
  	
  	<select id="selectTotalRecord" parameterType="java.util.Map" resultType="String">
		SELECT COUNT(*) AS CNT
          FROM ITSM_COM_CODE_INFO_MASTER
         WHERE 1=1
		 <if test='p_major_code_kor_name != null and !p_major_code_kor_name.equalsIgnoreCase("")'>
		   AND MAJOR_CODE_KOR_NAME LIKE '%' || #{p_major_code_kor_name} || '%'
		 </if>  
  	</select>
  	
</mapper>