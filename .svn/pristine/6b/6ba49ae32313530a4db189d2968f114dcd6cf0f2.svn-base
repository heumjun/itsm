<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="SaveManageUser">
  	
  	<!-- insert 전 중복 체크  -->
  	<select id="duplicate" parameterType="java.util.Map" resultType="int" >
		SELECT count(*) as cnt
		  FROM ITSM_COM_USER_INFO
		 WHERE LOGIN_ID = #{login_id}
  	</select>
  	
 	<insert id="insert" parameterType="java.util.Map">
		INSERT
		  INTO ITSM_COM_USER_INFO(
		  	   SEQ_ID
	  		 , LOGIN_ID 
		     , PASSWORD 
		     , NAME 
		     , E_MAIL 
		     , COMPANY_NAME 
		     , DEPARTMENT 
		     , RANK 
		     , CONTRACT_ADDRESS1 
		     , CONTRACT_ADDRESS2 
		     , CONTRACT_ADDRESS3 
		     , STATUS 
		     , CREATE_DATE 
		     , CREATED_BY 
		     , LAST_UPDATE_DATE 
		     , LAST_UPDATE_BY 
			 )
		VALUES(
			   #{seq_id}
			 , #{login_id}
		     , '1234'
		     , #{name}
		     , #{e_mail}
		     , #{company_name}
		     , #{department}
		     , #{rank}
		     , #{contract_address1}
		     , NULL
		     , NULL
		     , 'Y'
		     , TO_CHAR(SYSDATE, 'YYYY-MM-DD')
		     , #{loginId}
		     , TO_CHAR(SYSDATE, 'YYYY-MM-DD')
		     , #{loginId}
		     )
	</insert>
	
	<update id="update" parameterType="java.util.Map">
		UPDATE ITSM_COM_USER_INFO
		   SET NAME = #{name}
		     , E_MAIL = #{e_mail}
		     , COMPANY_NAME = #{company_name}
		     , DEPARTMENT = #{department}
		     , RANK = #{rank}
		     , CONTRACT_ADDRESS1 = #{contract_address1}
		     , STATUS = #{status}
		     , LAST_UPDATE_DATE = TO_CHAR(SYSDATE, 'YYYY-MM-DD')
		     , LAST_UPDATE_BY = #{loginId}
		 WHERE SEQ_ID = #{seq_id}
	</update>
  	
  	<delete id="delete" parameterType="java.util.Map">
  		DELETE FROM ITSM_COM_USER_INFO
		 WHERE SEQ_ID = #{seq_id}
  	</delete>
  	
  	<update id="updateControl" parameterType="java.util.Map">
		UPDATE ITSM_COM_USER_INFO
		   SET AUTHOR_CODE = #{controlFlag}
		 WHERE SEQ_ID = #{seq_id}
	</update>
	
	<select id="userAuthDuplicationCnt" parameterType="java.util.Map" resultType="int" >
		SELECT count(*) as cnt
		  FROM ITSM_COM_INDI_AUTH_INFO
		 WHERE ICUI_SEQ_ID = #{loginSeqId}
  	</select>
  	
  	<insert id="userAuthInsert" parameterType="java.util.Map">
		INSERT
		  INTO ITSM_COM_INDI_AUTH_INFO(
		  	   SEQ_ID
	  		 , ICUI_SEQ_ID 
		     , ICSAIM_SEQ_ID
		     , CREATE_DATE 
		     , CREATED_BY 
		     , LAST_UPDATE_DATE 
		     , LAST_UPDATE_BY 
			 )
		VALUES(
			   #{seq_id}
			 , #{loginSeqId}
		     , 'ITSM_SQTYPE003_00002'
		     , TO_CHAR(SYSDATE, 'YYYY-MM-DD')
		     , #{loginId}
		     , TO_CHAR(SYSDATE, 'YYYY-MM-DD')
		     , #{loginId}
		     )
	</insert>
  	
	
</mapper>