<!-- Bootstrap core JavaScript-->
<script src="/js/jquery/jquery.min.js"></script>
<script src="/js/commonGridUtil.js"></script>
<script type="text/javascript">
function userIdCheck() {
	$.ajax({
		type : 'POST',
		url : 'main.memberJoin.userIdCheck.do',
		data : $("#login_form").serialize(),
		dataType : 'json',
		success : function(data) {
			alert(data.resultMsg);
			if(data.result == 'success') {
				$("#checkedIsUser").val("Y");
			}
		},
		error : function(xhr, status, error) {
			alert('시스템 오류입니다.\n전산담당자에게 문의해주세요.');
		}

	});
}
	
	
function userRegiste() {
	
	var rtn = false;
	
	if(uniqeValidation()){
		rtn = true;
	}
	
	if($("#checkedIsUser").val() == 'N') {
		alert("아이디를 확인해주세요.");
		return false;
	}
	
	if(rtn) {
		$.ajax({
			type : 'POST',
			url : 'main.memberJoin.memberJoinRegiste.do',
			data : $("#login_form").serialize(),
			dataType : 'json',
			success : function(data) {
				alert(data.resultMsg);
				if (data.result == 'success') {
					location.href = "/";
				}
			},
			error : function(xhr, status, error) {
				alert('시스템 오류입니다.\n전산담당자에게 문의해주세요.');
			}

		});
	}

}
	
//필수 항목 Validation
var uniqeValidation = function(){
	var rnt = true;
	$(".form-control").each(function(){
		if($(this).val() == ""){
			$(this).focus();
			alert($(this).attr("alt")+ "가 누락되었습니다.");
			rnt = false;
			return false;
		}
	});
	return rnt;
}
</script>
